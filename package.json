{
  "name": "koa2-ts-sequelize-bootstrap",
  "version": "1.0.0",
  "description": "An opinionated boilerplate for koa v2 with typescript",
  "scripts": {
    "start": "node bin/server",
    "watch": "nodemon bin/server",
    "lint": "./node_modules/.bin/tslint 'lib/**/*.ts' 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "./node_modules/.bin/jest",
    "test:coverage": "./node_modules/.bin/jest --colors --coverage",
    "test:watch": "./node_modules/.bin/jest --colors --watch",
    "sqlz:createdb": "./node_modules/.bin/sequelize db:create",
    "sqlz:migrate:new": "./node_modules/.bin/sequelize migration:create --name",
    "sqlz:migrate": "./node_modules/.bin/sequelize db:migrate",
    "sqlz:migrate:undo": "./node_modules/.bin/sequelize db:migrate:undo",
    "sqlz:seed:new": "./node_modules/.bin/sequelize seed:create --name",
    "sqlz:seed": "./node_modules/.bin/sequelize db:seed:all",
    "sqlz:seed:file": "./node_modules/.bin/sequelize db:seed --seed",
    "sqlz:seed:undo": "./node_modules/.bin/sequelize db:seed:undo",
    "apidocs": "./node_modules/.bin/apidoc -i src/ -o doc/"
  },
  "author": "Raheel Jameel <raheel_jameel@yahoo.com>",
  "license": "MIT",
  "dependencies": {
    "boom": "^7.3.0",
    "bunyan": "^1.8.12",
    "continuation-local-storage": "^3.2.1",
    "joi": "^14.3.1",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-bunyan-logger": "^2.1.0",
    "koa-helmet": "^4.1.0",
    "koa-json": "^2.0.2",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-useragent": "^1.2.1",
    "mysql2": "^1.6.5",
    "sequelize": "5.7.6",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/boom": "^7.2.1",
    "@types/bunyan": "^1.8.6",
    "@types/continuation-local-storage": "^3.2.1",
    "@types/joi": "^14.3.3",
    "@types/koa": "^2.0.48",
    "@types/koa-bunyan-logger": "^2.1.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-json": "^2.0.18",
    "@types/koa-mount": "^3.0.1",
    "@types/koa-router": "7.0.40",
    "@types/koa-static": "^4.0.1",
    "@types/koa-useragent": "^1.2.0",
    "@types/node": "^11.13.9",
    "@types/validator": "^10.11.0",
    "apidoc": "^0.17.7",
    "husky": "^2.1.0",
    "nodemon": "^1.19.0",
    "sequelize-cli": "^5.4.0",
    "tslint": "^5.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
